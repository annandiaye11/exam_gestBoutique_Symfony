{% extends 'base.html.twig' %}

{% block title %}Nouvel Article{% endblock %}

{% block body %}
    <div class="flex h-screen bg-gray-100">
        <!-- Sidebar -->
        <aside class="w-64 bg-slate-800 text-white">
            <div class="p-4">
                <h1 class="text-2xl font-bold mb-6">Gestion Articles</h1>
                <twig:Navigation />
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto">
            <div class="container mx-auto px-6 py-8">
                <h2 class="text-3xl font-semibold text-gray-800 mb-6">Création d'un Article</h2>
                
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="p-6 bg-gradient-to-r from-teal-500 to-cyan-500 text-white">
                        <h3 class="text-xl font-semibold">Informations de l'Article</h3>
                    </div>
                    
                    {{ form_start(form, {'attr': {'class': 'p-6'}}) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            {% for field in form.children %}
                                <div>
                                    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-300 focus:ring focus:ring-teal-200 focus:ring-opacity-50'}}) }}
                                    <div class="mt-1 text-sm text-red-600">
                                        {{ form_errors(field) }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        <div class="mt-6 flex items-center justify-end space-x-4">
                            <a href="{{ path('app_article_index') }}" class="text-teal-600 hover:text-teal-800 font-medium transition duration-300 ease-in-out">
                                Retour à la liste
                            </a>
                            <button type="submit" class="px-6 py-2 bg-teal-500 text-white font-semibold rounded-lg shadow-md hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-opacity-75 transition duration-300 ease-in-out">
                                Créer l'article
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    </div>
{% endblock %}

